<div class="container">
  <h1>New Game</h1>
  <div class="grid">
    <% @letters.each do |letter| %>
    <span class="letter"><%= letter %></span>
    <% end %>
  </div>
</div>
<div class="container">
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="name">What is the longest word you can find?</label>
      <input type="hidden" name="grid" id="grid"  value="<%= @letters.join %>">
      <input class="form-control" type="text" name="word" id="word" required>
    </div>
    <input type="submit" class="btn btn-primary" value="Play!">
  </form>
</div>
